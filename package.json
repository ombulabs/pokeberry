{
  "name": "pokeberry",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "packages/*",
    "sandbox"
  ],
  "sideEffects": false,
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test:component": "cypress run --component",
    "test:e2e": "concurrently -s first -k 'yarn dev' 'yarn cy:run'",
    "test:all": "yarn clear-coverage && yarn test:component && yarn test:e2e && yarn report:cy",
    "report:cy": "nyc report --reporter lcov --reporter text --report-dir coverage/coverage-cypress --check-coverage",
    "clear-coverage": "rm -rf .nyc_output && rm -rf coverage",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.10.0",
    "@cypress/react": "^5.12.5",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/react": "^13.3.0",
    "@types/node": "^17.0.35",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "@vitejs/plugin-react": "^1.3.0",
    "concurrently": "^7.2.2",
    "cypress": "^10.0.3",
    "del": "^6.1.1",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "husky": "^8.0.1",
    "istanbul-lib-coverage": "^3.2.0",
    "lint-staged": "^13.0.3",
    "open-cli": "^7.0.1",
    "prettier": "^2.6.2",
    "react-router-dom": "^6.3.0",
    "typescript": "^4.6.3",
    "vite": "^2.9.9",
    "vite-plugin-dts": "^1.2.0",
    "vite-plugin-istanbul": "^2.8.0"
  }
}
