{
  "name": "@ombulabs/pokeberry",
  "private": true,
  "version": "0.0.1",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "main": "./dist/pokeberry.umd.js",
  "module": "./dist/pokeberry.es.js",
  "exports": {
    ".": {
      "require": "./dist/pokeberry.umd.js",
      "import": "./dist/pokeberry.es.js"
    }
  },
  "sideEffects": false,
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test:all": "yarn run clear-coverage && yarn run test:unit && yarn run test:e2e && yarn run report:combined",
    "test:unit": "jest",
    "test:e2e": "cypress run",
    "test:e2e-browser": "cypress open",
    "server-and-test": "concurrently -s first -k 'yarn dev' 'yarn test:e2e'",
    "mkdir:reports": "mkdir coverage/reports || true",
    "precopy:reports": "yarn mkdir:reports",
    "copy:reports": "cp coverage/coverage-cypress/coverage-final.json coverage/reports/from-cypress.json && cp coverage/coverage-final.json coverage/reports/from-jest.json",
    "precombine:reports": "yarn copy:reports && mkdir .nyc_output || true",
    "combine:reports": "nyc merge coverage/reports && mv coverage.json .nyc_output/out.json",
    "prereport:combined": "yarn combine:reports",
    "report:combined": "nyc report --reporter lcov --reporter text --report-dir coverage/coverage-all --check-coverage",
    "clear-coverage": "rm -rf .nyc_output && rm -rf coverage"
  },
  "dependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.10.0",
    "@cypress/react": "^5.12.5",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@swc/core": "^1.2.196",
    "@swc/jest": "^0.2.21",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^28.1.0",
    "@types/node": "^17.0.35",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "@vitejs/plugin-react": "^1.3.0",
    "babel-plugin-istanbul": "^6.1.1",
    "concurrently": "^7.2.2",
    "cypress": "^10.0.3",
    "del": "^6.1.1",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "istanbul-lib-coverage": "^3.2.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "open-cli": "^7.0.1",
    "prettier": "^2.6.2",
    "react-router-dom": "^6.3.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.6.3",
    "vite": "^2.9.9",
    "vite-plugin-dts": "^1.2.0"
  }
}
